    %big= team.name
    %dl
      %dt Members
      %dd= team.users.count
      %dt Created
      %dd= team.created_at.strftime("%b %d '%y")
      %dt Organization
      %dd
        - if team.personal?
          Personal
        - else
          = ('%-8.8s' % team.organization.name).gsub(' ', 'Â·')
      %dt Entries
      %dd= team.entries.count